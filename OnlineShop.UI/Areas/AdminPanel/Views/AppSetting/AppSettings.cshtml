@model OnlineShop.Common.Result.Result<OnlineShop.Application.General.AppSetting.ModelDto.AppSettingDto>

@{
    ViewData["Title"] = " تنظیمات سایت";
    Layout = "~/Areas/AdminPanel/Views/Shared/_DefaultLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="box">
            <form id="settingForm">
                <div class="box-header with-border">
                    <h4 class="box-title">تنظیمات سایت</h4>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>عنوان</label>
                                <div>
                                    <input type="text" id="title" name="title" value="@Model.Data.Title" class="form-control" placeholder="عنوان">
                                </div>
                                <span id="span-title" class="help-block"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>ایمیل</label>
                                <div>
                                    <input type="text" id="email" name="email" value="@Model.Data.Email" class="form-control" placeholder="ایمیل">
                                </div>
                                <span id="span-email" class="help-block"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>شماره تماس</label>
                                <div>
                                    <input type="text" id="phone" name="phone" value="@Model.Data.PhoneNumber" class="form-control" placeholder="شماره تماس">
                                </div>
                                <span id="span-phone" class="help-block"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>کد زرین پال</label>
                                <div>
                                    <input type="text" id="merchantId" name="merchantId" value="@Model.Data.MerchantId" class="form-control" placeholder="کد زرین پال">
                                </div>
                                <span id="span-merchantId" class="help-block"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>Google Analytic</label>
                                <div>
                                    <input type="text" id="googleAnalytic" name="googleAnalytic" value="@Model.Data.GoogleAnalytic" class="form-control" placeholder="google Analytic">
                                </div>
                                <span id="span-googleAnalytic" class="help-block"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>Google Master</label>
                                <div>
                                    <input type="text" id="googleMaster" name="GoogleMaster" value="@Model.Data.GoogleMaster" class="form-control" placeholder="Google Master">
                                </div>
                                <span id="span-googleMaster" class="help-block"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>حداکثر تعداد اسلایدر</label>
                                <div>
                                    <input type="text" id="maxSlider" name="maxSlider" value="@Model.Data.MaxSlideShow" class="form-control" placeholder="حداکثر تعداد اسلایدر">
                                </div>
                                <span id="span-maxSlider" class="help-block"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>حداکثر فایل اپلود</label>
                                <div>
                                    <input type="text" id="maxUploadSize" value="@Model.Data.MaxSlideShow" name="maxUploadSize" class="form-control" placeholder="حداکثر فایل اپلود">
                                </div>
                                <span id="span-maxUploadSize" class="help-block"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>کپی رایت</label>
                                <div>
                                    <input type="text" id="copyRight" name="copyRight" value="@Model.Data.CopyRight" class="form-control" placeholder="کپی رایت">
                                </div>
                                <span id="span-copyRight" class="help-block"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>E-Namad</label>
                                <div>
                                    <input type="text" id="eNamad" name="eNamad" value="@Model.Data.ENamad" class="form-control" placeholder="E-Namad">
                                </div>
                                <span id="span-eNamad" class="help-block"></span>
                            </div>
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>توضیحات</label>
                                <textarea rows="3" cols="5" class="form-control" id="description" asp-for="@Model.Data.Description" placeholder="ناحیه متن"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>آدرس</label>

                                <textarea rows="3" cols="5" id="address" class="form-control" asp-for="@Model.Data.Address" placeholder="ناحیه متن"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="row">
                                <div class="col-md-9">
                                    <input id='txt_zoom' class="form-control" type='text' disabled />
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-danger btn-sm " style="width: 100%" onclick="removeMarkerByUser();return false;">حذف نشانگر</button>
                                </div>
                            </div>
                            <div id="map" style="width: 100%; height: 250px;margin-top: 30px"></div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <input type="hidden" id="latitude" name="latitude" value="@Model.Data.Latitude" />
                            <input type="hidden" id="longitude" name="longitude" value="@Model.Data.Longitude" />
                            <input type="hidden" id="logo" name="logo" value="@Model.Data.Logo" />
                            <form method="post" enctype="multipart/form-data" id="myform">
                                <div class="form-group">
                                    <div class="row p-t-20">
                                        <div class="col-md-3" style="margin: 0">
                                            <div class="fileUpload btn btn-info" style="border-radius: 5px; height: 30px;">
                                                <span>Upload</span>
                                                <input id="imgUp" name="imgUp" type="file" class="upload" value="آپلود"
                                                       style="position: absolute; top: 0; right: 0; margin: 0; padding: 0; font-size: 20px; cursor: pointer; opacity: 0; filter: alpha(opacity=0);" />
                                            </div>
                                        </div>

                                        <div class="col-md-9" style="margin: 0">
                                            <input id="imgUpInput" class="img img-bordered img-fluid" placeholder="تصویر را انتخاب کنید" disabled="disabled" style="border-radius: 5px; height: 30px;" />
                                        </div>
                                    </div>
                                </div>

                                <img id="previewholder" src="@Model.Data.Logo" alt="uploaded image preview holder" style="margin-bottom: 30px; margin-top: 10px;" width="250px" height="250px" @(string.IsNullOrWhiteSpace(Model.Data.Logo) ? "hiden:true" : "") />
                            </form>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-12 col-md-6">
                            <div class="box-footer text-right">

                                <button type="submit" class="btn btn-rounded btn-primary btn-outline">
                                    <i class="ti-save-alt"></i> ثبت
                                </button>
                            </div>
                        </div>

                    </div>


                </div>
            </form>
        </div>
    </div>
</div>

@section script
{
  

    <script src="~/Admin/js/Setting/SettingCommand.js"></script>
    <script>

        var map;
        var markers = [];
        var Plat = 35.6891980;
        var Plng = 51.3889740;

        if (document.getElementById('longitude').value != "" && document.getElementById('latitude').value != "") {
            try {
                Plat = 35.6891980;
                Plng = 51.3889740;
            } catch (err) {
                Plat = 35.6891980;
                Plng = 51.3889740;
                document.getElementById('longitude').value = document.getElementById('latitude').value = "";
            }

        }

        function initMap() {
            var myLatlng = { lat: Plat, lng: Plng };
            map = null;
            map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: myLatlng
            });

            if (document.getElementById('latitude').value != "" && document.getElementById('longitude').value != "") {
                try {
                    var markerLatlng = new google.maps.LatLng(Plat, Plng);

                    placeMarker(markerLatlng);
                } catch (err) {
                    deleteMarkers();
                }


            }

            map.addListener('click', function (e) {
                if (map.getZoom() > 8) {
                    //document.getElementById('txt_zoom').value = map.getZoom();
                    placeMarker(e.latLng);
                }
            });

            map.addListener('bounds_changed', function () {
                if (map.getZoom() > 8)
                    document.getElementById('txt_zoom').value = "مکان مورد نظر را روی نقشه انتخاب کنید";
                else
                    document.getElementById('txt_zoom').value = "لطفا بیشتر زوم کنید";
            });


            google.maps.event.addDomListener(window, "resize", function () {
                var center = map.getCenter();
                google.maps.event.trigger(map, "resize");
                map.setCenter(center);
            });
        }


        function placeMarker(location) {
            setTimeout(function () {

                document.getElementById('latitude').value = location.lat().toFixed(6);;
                document.getElementById('longitude').value = location.lng().toFixed(6);;
                console.log(location.lat().toFixed(6));
                deleteMarkers();
                var marker = new google.maps.Marker({
                    position: location,
                    map: map
                });
                markers.push(marker);

            }, 500);


        }


        // Deletes all markers in the array by removing references to them.
        function deleteMarkers() {

            for (var i = 0; i < markers.length; i++) {
                markers[i].setMap(null);
            }
            markers = [];
        }
        function removeMarkerByUser() {
            setTimeout(function () {
                document.getElementById('latitude').value = null;
                document.getElementById('longitude').value = null;
                deleteMarkers();
            }, 500);
        }

        function refreshMap() {
            setTimeout(function () {
                google.maps.event.trigger(map, 'resize');
            }, 500);
        }
        //AIzaSyAMVLJnxyLJPqbOpV4yJpJHdSWzUz77x4E459F8F3E-E3D5-446A-E7CA-08D7C117C842


    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCO-bW6NF9t2pNgkS0J-_1fc61VuEDpeCE&callback=initMap"></script>
    <script>
        function readurl(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#previewholder').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        document.getElementById("imgUp").onchange = function () {
            document.getElementById("imgUpInput").value = this.value;
        };
        $("#imgUp").change(function () {
            var fd = new FormData();
            var files = $('#imgUp')[0].files[0];

            console.log(files);
            fd.append('files', files);

            $.ajax({
                url: '/file/Upload',
                type: 'post',
                data: fd,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response != 0) {
                        $('#previewholder').show();
                        $('#previewholder').removeAttr('hidden');
                        console.log(response[0].path);
                        $("#logo").val(response[0].path);

                    } else {
                        alert('file not uploaded');
                    }
                },
            });

            readurl(this);
        });



    </script>

}


